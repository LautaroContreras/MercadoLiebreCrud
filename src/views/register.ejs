<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación de usuario'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registro de usuario</h2>
			</div>
		</div>
		<div class="col-12">
			
			<form action="/users/register" method="POST"   >
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre</label>
						<input type="text" name="name" class="form-input" id="name" placeholder="nombre" value="<%= locals.old && old.name %>">
						<% if (locals.errors && errors.name) { %>
							<p class="feedback"><%= errors.name.msg %></p>
							<% } %>
					  </div>

					  <div class="col-12 col-md-6">
						<label for="lastName" class="form-label">Apellido</label>
						<input type="text" name="lastName" class="form-input" id="lastName" placeholder="apellido" value="<%= locals.old && old.lastName %>">
						<% if (locals.errors && errors.name) { %>
							<p class="feedback"><%=errors.lastName.msg %></p>
							<% } %>
					  </div>

					<div class="col-12 col-md-6">
						<label for="email" class="form-label">Correo electrónico</label>
						<input type="email" name="email" class="form-input" id="email" placeholder="nombre@example.com" value="<%= locals.old && old.email %>">
						<% if (locals.errors) { %>
							<p class="feedback"><%= errors.email.msg%></p>
							<% } %>
					  </div>

					  <div class="col-12 col-md-6">
						<label for="password" class="form-label">Contraseña</label>
						<input type="password" name="password"class="form-input" id="password" value="<%= locals.old && old.password %>">
						<% if (locals.errors && errors.name) { %>
							 <p class="feedback"><%= errors.password.msg %></p>
							<% } %>
					  </div>
					  
					  <div class="col-12">
						<button type="submit" class="buy-now-button">Registrarse</button>
					  </div>
					</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>